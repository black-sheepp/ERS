<link rel="stylesheet" href="/CSS/profile.css" />

<h4 class="text-center mt-5">Profile</h4>
<hr>
<div class="container m-4 d-flex">
    <div class="card">
        <img
             class="profile-pic"
             src="<%= userone.avatar %>"
             alt="<%= userone.firstName %>"
             style="object-fit: cover;"
        />
   </div>
     <div class="container">
          <div class="mx-5">
               <div class="d-flex">
                    <p class="db-field">Name:</p>
                    <p class="db-value"><%= userone.firstName %> <%= userone.lastName %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Profile:</p>
                    <p class="db-value"><%= userone.jobProfile %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Role:</p>
                    <p class="db-value"><%= userone.role %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Company:</p>
                    <p class="db-value"><%= userone.companyName %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Skills:</p>
                    <p class="db-value"><%= userone.skills %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Email:</p>
                    <p class="db-value"><%= userone.email %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Phone:</p>
                    <p class="db-value"><%= userone.phone %></p>
               </div>
               <div class="d-flex">
                    <p class="db-field">Address:</p>
                    <p class="db-value"><%= userone.address %></p>
               </div>
               <div class="my-5 d-flex">
                    <a
                         href="<%= userone.linkedIn %>"
                         target="_blank"
                         style="text-decoration: none; font-weight: bold; color: #0A66C2; margin-right: 40px"
                    >
                         <i class="fa-brands fa-linkedin fa-2xl"></i> LinkedIn</a
                    >
                    <a
                         href="<%= userone.github %>"
                         target="_blank"
                         style="text-decoration: none; font-weight: bold; color: #2d2e83; margin-right: 40px"
                         ><i class="fa-brands fa-square-github fa-2xl"></i> GitHub</a
                    >
                    <% if(locals.user.role == "Admin") {%>
                    <a
                         href="/user/update-profile/<%= userone.id %>"
                         style="text-decoration: none; font-weight: bold; color: #ff006e; margin-right: 40px"
                         ><i class="fa-solid fa-user-pen fa-xl"></i> Update Profile</a
                    >
                    <% } %>
               </div>
          </div>
     </div>
</div>

<div class="container">
     <h4 class="text-center mt-5">Ratings & Feedback on <strong><%= userone.firstName %></strong></h4>
     <hr>
          <% for(record of reviewRecord) {%>
               <div class=" container position-relative p-2 px-4 my-2 bg-danger-subtle text-emphasis-danger rounded-4">
                    <strong><%= record.reviewer.firstName %> <%= record.reviewer.lastName %></strong> reviewed <strong><%= userone.firstName %></strong> on Admin: <strong><%= record.senderAdmin.firstName %></strong>'s request.
                    <p>Rating: <% for(i=0;i<record.rating;i++) {%> <i class="fa-regular fa-star"></i> <% } %>
                         <br>
                         Review: <%= record.review %>
                    </p>
                    <div class="position-absolute bottom-0 end-0 px-4 py-1" style="color: #736ced;">
                         <small><%= String(record.createdAt).slice(0,15) %></small>
                    </div>
               </div>
          <% } %>
     
</div>